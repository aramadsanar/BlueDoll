<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/dolls_list_item_dollImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@drawable/boneka_kucing"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/dolls_list_item_dollImage">
        <TextView
            android:id="@+id/dolls_list_item_dollName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="32sp"
            tools:text="Boneka Kucing"/>
        <TextView
            android:id="@+id/dolls_list_item_dollDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            tools:text="Boneka Kucing Lucu"/>

    </LinearLayout>
</RelativeLayout>